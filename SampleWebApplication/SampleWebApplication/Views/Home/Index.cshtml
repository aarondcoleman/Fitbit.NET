@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @Html.ActionLink("Authorize", "Authorize", "Fitbit")
</div>

<div class="row">
    @if (ViewBag.AccessToken != null)
    {
        <p>Token -- @ViewBag.Token</p>
        <p>Token type -- @ViewBag.TokenType</p>
        <p>Expires In -- @ViewBag.ExpiresIn</p>
        <p>Refresh token -- @ViewBag.RefreshToken</p>

    }
    else
    {
        <p>The current session has not been authenticated with fitbit</p>
    }
</div>
